{
    "$schema": "node_modules/wrangler/config-schema.json",

    //Settings
    "name": "url-shortener-test",
    "main": "src/index.ts",

    //Configuration
    "compatibility_date": "2025-08-05",
    "compatibility_flags": [ "nodejs_compat" ],
    "observability": {
        "enabled": true
    },
    "placement": {
        "mode": "smart"
    },

    //Triggers
    "workers_dev": false,
    "route": {
        "custom_domain": true,
        "pattern": "urls.conorlewis.com"
    },

    //Bindings
    "kv_namespaces": [
        {
            "binding": "kv",
            "id": "d59e513888734b6ba8f1c426ab68761c"
        }
    ],
    "vars": {
        "NODE_ENV": "production",
        "CHARACTER_SLICE": "4"
    },
    "analytics_engine_datasets": [
        { "binding": "aed", "dataset": "url_shortener" }
    ],
    "unsafe": {
        "bindings": [
            {
                "name": "rateLimit",
                "type": "ratelimit",
                "namespace_id": "117114108115",
                "simple": {
                    "limit": 10,
                    "period": 10
                }
            }
        ]
    }
}